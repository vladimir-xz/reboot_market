<div class="flex">
    {% for key, values in filter  %}
        {%  if key == 'prices'  %}
            <div class="flex flex-col w-1/3">
                <p>{{  key|capitalize  }}</p>
                <p>{{  values.max  }}</p>
                <p>{{  values.min  }}</p>
            </div>
        {%  elseif key == 'specifications'  %}
            {%  for key, specValues in values   %}
                <div class="w-1/3">
                    <p>{{  key|capitalize  }}</p>
                    <div data-model="{{  key }}" class="flex flex-col ">
                        {% for value in specValues  %}
                        <div class="">
                            <input id="{{  value  }}" type="checkbox" data-model="specs['{{  key  }}'][]" value="{{  value    }}"><label for="{{  value  }}">{{  value|capitalize    }}</label>
                        </div>
                        {%  endfor  %}
                    </div>
                </div>
            {%  endfor  %}
        {%  else  %}
            <div class="w-1/3">
                <p>{{  key|capitalize  }}</p>
                <div data-model="{{  key }}" class="flex flex-col ">
                    {% for value in values  %}
                        <div class="">
                            <input id="{{  value  }}" type="checkbox" data-model="{{  key  }}[]" value="{{  value    }}" ><label for="{{  value  }}">{{  value|capitalize    }}</label>
                        </div>
                    {%  endfor  %}
                </div>
            </div>
        {%  endif  %}
    {% endfor %}
</div>