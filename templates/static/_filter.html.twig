<div class="mx-8 mt-2" data-controller="filter" data-filter-brands-value="{{ brands }}" data-action="productFilters:remove@window->filter#removeAll">
    <div class="flex justify-between px-4 pb-2">
        <twig:Labels />

        <button 
            data-action="filter#toggle"
            class="cursor-pointer px-6 text-2xl text-slate-100 bg-teal-900 transition ease-in-out delay-100 hover:bg-teal-600" 
        >Filters</button>
    </div>
    <div class="hidden p-8 flex border-2 border solid border-neutral-400"  data-filter-target="body">
        {% for key, values in filter  %}
            {%  if key == 'prices'  %}
                <div class="flex flex-col w-1/3">
                    <p>{{  key|capitalize  }}</p>
                    <p>{{  values.max  }}</p>
                    <p>{{  values.min  }}</p>
                </div>
            {%  elseif key == 'specifications'  %}
                {%  for key, specValues in values   %}
                    <div class="w-1/3">
                        <p>{{  key|capitalize  }}</p>
                        <div data-model="{{  key }}" class="flex flex-col ">
                            {% for value in specValues  %}
                            <div class="">
                                <input id="{{  value  }}" data-action="filter#new" data-filter-target="filter" type="checkbox" data-filter-payload-param='{"key":"specs", "keySpecs":"{{  key  }}", "value":"{{  value  }}"}' >{{  value|capitalize    }}</label>
                            </div>
                            {%  endfor  %}
                        </div>
                    </div>
                {%  endfor  %}
            {%  else  %}
                <div class="w-1/3">
                    <p>{{  key|capitalize  }}</p>
                    <div data-model="{{  key }}" class="flex flex-col ">
                        {% for value in values  %}
                            <div class="">
                                <input id="{{  value  }}" data-action="filter#new" data-filter-target="filter" type="checkbox" data-filter-payload-param='{"key":"{{  key  }}", "value":"{{  value  }}"}' ><label for="{{  value  }}">{{  value|capitalize    }}</label>
                            </div>
                        {%  endfor  %}
                    </div>
                </div>
            {%  endif  %}
        {% endfor %}
    </div>
</div>