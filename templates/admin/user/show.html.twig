{% extends 'layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>FormOfAddress</th>
                <td>{{ user.formOfAddress }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ user.company }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>VatNumber</th>
                <td>{{ user.vatNumber }}</td>
            </tr>
        </tbody>
    </table>

    <div class="my-4">
        <a href="{{ path('user.index') }}">Back to list</a>
    </div>

    <div class="my-4">
        <a href="{{ path('user.edit', {'id': user.id}) }}">edit</a>
    </div>

    {{ include('admin/user/_delete_form.html.twig') }}

    <div class="my-4">
        <a href="{{ path('admin') }}">Back to admin lobby</a>
    </div>
{% endblock %}
