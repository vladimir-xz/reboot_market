<div {{ attributes.defaults(stimulus_controller('buy')) }} class="flex justify-between">
    <!-- component html --> 
    <div class="flex border-2 border-teal-900 rounded-md bg-none leading-none">
        <button 
            class="px-2 border-r-2 border-teal-900"
            data-action="buy#decr"
        >-</button>

        <input
            class="bg-none border-0 p-1 w-10"
            type="number"
            value="1"
            min="1" 
            max="{{ product.amount }}"
            data-buy-target="input"
            data-stock-max="{{  product.amount  }}"
        />
        <button
            class="px-2 border-l-2 border-teal-900"
            data-action="buy#incr"
        >+</button>
    </div>

    <div class="flex items-center ">
        <button
            class="rounded-full text-teal-900 bg-amber-dim px-1"
            data-action="buy#send"
        >
        Add to cart
    </button> 
    </div>
</div>
