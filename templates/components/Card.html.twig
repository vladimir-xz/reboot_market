<div{{ attributes }} class="flex-auto w-48 max-w-60 h-64 bg-neutral-50">
    <a href="{{ path('product.index', {id: product.id}) }}">
        <img class="h-40 object-contain" src="{{ asset(product.mainImagePath) }}" alt="Server">
    </a>

    <div class="p-4">
        <div>
            <a href="{{ path('product.index', {id: product.id}) }}">
                <span>{{    product.name    }}</span>
            </a>

        </div>
        <div class="flex justify-between">
            <div class="">In stock: {{  product.amount  }}</div>
            <div class="">{{  product.price  }} Dollars</div>
        </div>
    </div>
</div>
