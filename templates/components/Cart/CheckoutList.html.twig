<div{{ attributes }} class="border-b bg-white-granular p-8">
    <p class="border-b text-lg font-[500]">Shopping cart preview:</p>
    <div class="border-b">
        {% for product in this.products %}
            <twig:Cart:Product
                :product="product"
                role="checkout"
                id="product-{{ product.id }}-{{ product.quantity }}"
            >
                <p>Some long desciption, Some long desciption, Some long desciption, Some long desciption, </p>
                <p>Price:
                    {%   if not product.price is null   %}
                        {{  appCurrency.display(product.price)|format_currency(appCurrency.getActual)  }}
                    {%   endif   %}
                </p>
            </twig:Cart:Product>
        {% endfor %}
    </div>
</div>
